# Application
APP_NAME=Identity Service
APP_VERSION=0.1.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
DATABASE_URL=postgresql+asyncpg://identity:identity@localhost:5432/identity
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_ISSUER=identity-service
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# JWT Keys (Generate with: ssh-keygen -t rsa -b 2048 -m PEM -f jwtRS256.key)
# For private key: cat jwtRS256.key | base64 -w 0
# For public key: ssh-keygen -f jwtRS256.key -e -m PKCS8 | base64 -w 0
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# CORS
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true
